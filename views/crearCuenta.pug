doctype html
html(lang="en")
    head 
        include partials/header
    body.login 
        .contenedor-formulario
            h1 Crea tu cuenta en Uptask 

            if errores
                each error in errores
                    p.error.alerta= (error.message === 'usuarios.usuarios_email_unique must be unique' ? 'Email Ya Registrado' : error.message) 

            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
                .campo 
                    label(for="email") Email: 
                    input(type="email" name="email" placeholder="Tu email" value= email required)
                .campo 
                    label(for="password") Password: 
                    input(type="password" name="password" placeholder="Tu password" value= password required)
                .campo.enviar 
                    input.boton(type="submit" value="Crear Cuenta")
                .campo 
                    a(href="/iniciar-sesion") Iniciar Sesion
